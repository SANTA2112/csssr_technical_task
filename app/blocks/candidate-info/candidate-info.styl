.candidate-info
	display block
	margin-top 4rem
	&__label-wrap
		margin-bottom 2rem
	&__label
		display flex
		position relative
	&__span
		margin-right 1rem
		color label_calor
		font-size 1.4rem
		font-weight 700
		max-width 17.6rem
		white-space nowrap
	&__input
		border none
		padding 0 0 0.3rem 1rem
		background-color transparent
		color text_color
		font-family 'Courier New PSMT'
		font-size 1.8rem
		width 100%
		margin-top -1rem
		&-wrapper
			flex-grow 1
			position relative
		&-line
			position absolute
			bottom 0
			left 0
			background url('../images/border.png') center center/cover
			height 5px
			width 100%

