.javascript-skill
	display block
	margin-top 3.7rem
	&__wrapper
		position relative
		width 100%
		height 20px
		margin-top 1.4rem
		background-color transparent
		cursor pointer
	&__range
		position absolute
		width 100%
		opacity 0
		top 0
		left 0
		right 0
		bottom 0
	&__progressbar
		height 100%
		border-bottom 3px solid text_color
		position absolute
		pointer-events none
		left 4px
		right 4px
		&::before, &::after
			content ''
			position absolute
			width 1.5rem
			top 1.7rem
			left -.6rem
			height 3px
			background-color text_color
			transform rotate(90deg)
		&::after
			right -.7rem
			left auto
		&-wrap
			display flex
			justify-content space-between
			font-size .8rem
			font-weight 700
			color label_calor
		&-mark
			top 0
			position absolute
			left 0
			border 8px solid transparent
			border-top 13px solid text_color
			cursor move
			pointer-events none
	&__skill-lvl
		max-width 10.7rem
		margin-top 1.7rem
		position relative
		&:nth-child(2), &:nth-child(3)
			&::before
				content ''
				position absolute
				width .6rem
				top -1.6rem
				left -5px
				height 3px
				background-color text_color
				transform rotate(90deg)
		&:nth-child(2)
			margin-left 1rem
			&::before
				left 0
		&:nth-child(3)
			margin-right 1rem
