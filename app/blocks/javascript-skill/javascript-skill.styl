.javascript-skill
	display block
	margin-top 3.7rem
	&__progressbar
		position relative
		width 100%
		height 20px
		margin-top 1.4rem
		background-color transparent
		border-bottom 3px solid text_color
		&::before, &::after
			content ''
			position absolute
			width 1.5rem
			top 1.7rem
			left -.8rem
			height 3px
			background-color text_color
			transform rotate(90deg)
		&::after
			right -.8rem
			left auto
		&-wrap
			display flex
			justify-content space-between
			font-size .8rem
			font-weight 700
			color label_calor
		&-mark
			top 0
			position absolute
			left 142px
			border 8px solid transparent
			border-top 13px solid text_color
			cursor move
	&__skill-lvl
		max-width 10.7rem
		margin-top 3rem
		position relative
		&:nth-child(2), &:nth-child(3)
			&::before
				content ''
				position absolute
				width .6rem
				top -1.6rem
				left -5px
				height 3px
				background-color text_color
				transform rotate(90deg)
		&:nth-child(2)
			margin-left 1rem
			&::before
				left 0
		&:nth-child(3)
			margin-right 1rem
